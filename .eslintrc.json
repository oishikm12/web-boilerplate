{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "prettier",
        "stylelint"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-alert": "off",
        "no-console": "off",
        "no-unused-vars": "warn",
        "prettier/prettier": "error",
        "jest/no-deprecated-functions" : "off",
        "node/no-unsupported-features/es-syntax" : "off"
    },
    "ignorePatterns": ["config/*", "build/*", "node_modules/*"]
}
